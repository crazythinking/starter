            <PatternLayout charset="UTF-8" pattern="[%-5level] [%d{DEFAULT}] [%thread] [%MDC] ([%c:%line:%method]) %msg%n"/>
            <SizeBasedTriggeringPolicy size="50MB"/>
        </RollingFile>
        <Async name="AsyncInfoLog" bufferSize="256">
	      <AppenderRef ref="InfoLog"/>
