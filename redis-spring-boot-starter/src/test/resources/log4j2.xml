    </Appenders>

    <Loggers>
    	<Logger name="net.engining" level="TRACE" additivity="true"/>

        <Logger name="org.springframework" level="INFO" additivity="true"/>
        <Logger name="org.springframework.boot" level="TRACE" additivity="true"/>
        <Logger name="org.springframework.cache" level="TRACE" additivity="true"/>

        <!-- 配合show_sql=true,显示sql中的参数值 -->
        <!--<Logger name="org.hibernate.type" level="INFO" additivity="true"/>-->
        <!-- <Logger name="org.hibernate" level="INFO" additivity="true"/> -->
         <!--<Logger name="com.querydsl" level="TRACE" additivity="true"/>-->
        
        <!-- <Logger name="net.sf.ehcache" level="INFO" additivity="false"/> -->

        <!--只输入级别高于trace的日志-->
        <root level="${LOG_LEVEL}">
            <AppenderRef ref="Console"/>
            <!--<AppenderRef ref="AsyncAllLog"/>-->
            <!-- <AppenderRef ref="AsyncErrLog"/> -->
        </root>
    </Loggers>
</Configuration>